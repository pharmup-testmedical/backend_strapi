{
  "kind": "collectionType",
  "collectionName": "receipt_products",
  "info": {
    "singularName": "receipt-product",
    "pluralName": "receipt-products",
    "displayName": "Receipt Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "receipt": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::receipt.receipt",
      "inversedBy": "receiptProducts"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "receiptProducts"
    },
    "product_alias": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-alias.product-alias",
      "inversedBy": "receiptProducts"
    },
    "department": {
      "type": "string",
      "required": true
    },
    "unitPrice": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "measureUnit": {
      "type": "string",
      "required": true
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    }
  }
}
