{
  "kind": "collectionType",
  "collectionName": "product_aliases",
  "info": {
    "singularName": "product-alias",
    "pluralName": "product-aliases",
    "displayName": "Product Alias"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "productAliases"
    },
    "alternativeName": {
      "type": "string",
      "required": true,
      "unique": true,
      "pluginOptions": {
        "index": true
      }
    },
    "verificationStatus": {
      "type": "enumeration",
      "enum": [
        "unverified",
        "verified",
        "rejected"
      ],
      "default": "unverified",
      "required": true
    }
  }
}