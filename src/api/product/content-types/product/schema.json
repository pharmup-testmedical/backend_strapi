{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Товар",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "canonicalName": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Canonical name"
    },
    "cashbackEligible": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "productAliases": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-alias.product-alias",
      "mappedBy": "product"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
